{
  "name": "markdown-di",
  "version": "0.1.1",
  "description": "Type-safe dependency injection for markdown using frontmatter - parser-agnostic core with adapters",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "bun run --cwd packages/core build && bun run --filter './packages/*' --filter '!@markdown-di/core' build",
    "test": "bun test",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "check": "biome check .",
    "fix": "biome check --write ."
  },
  "keywords": [
    "markdown",
    "frontmatter",
    "dependency-injection",
    "transclusion",
    "composition",
    "remark",
    "unified",
    "markdown-parser"
  ],
  "author": "Pepijn Senders",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/PepijnSenders/markdown-di.git"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.0",
    "@types/bun": "latest",
    "typescript": "^5.3.3"
  }
}
