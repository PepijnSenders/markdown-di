{
  "name": "markdown-di",
  "version": "0.1.1",
  "description": "Type-safe dependency injection for markdown using frontmatter - parser-agnostic core with adapters",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "catalog": {
    "@biomejs/biome": "2.3.0",
    "@types/bun": "latest",
    "@types/mustache": "4.2.6",
    "@types/node": "^20.0.0",
    "ajv": "^8.12.0",
    "ajv-formats": "^3.0.1",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "fast-glob": "^3.3.3",
    "gray-matter": "^4.0.3",
    "mustache": "4.2.0",
    "typescript": "^5.9.3",
    "yaml": "^2.7.0",
    "zod": "^4.1.12"
  },
  "scripts": {
    "build": "bun run --cwd packages/core build && bun run --filter './packages/*' --filter '!@markdown-di/core' build",
    "test": "bun test",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "check": "biome check .",
    "fix": "biome check --write ."
  },
  "keywords": [
    "markdown",
    "frontmatter",
    "dependency-injection",
    "transclusion",
    "composition",
    "remark",
    "unified",
    "markdown-parser"
  ],
  "author": "Pepijn Senders",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/PepijnSenders/markdown-di.git"
  },
  "devDependencies": {
    "@biomejs/biome": "catalog:",
    "@types/bun": "catalog:",
    "zod": "catalog:",
    "typescript": "catalog:"
  }
}
