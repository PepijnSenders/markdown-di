{
  "name": "@markdown-di/core",
  "version": "0.1.0",
  "description": "Parser-agnostic dependency injection for markdown using frontmatter",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target node --format esm && tsc --emitDeclarationOnly",
    "test": "bun test",
    "prepublishOnly": "bun run build"
  },
  "keywords": [
    "markdown",
    "frontmatter",
    "dependency-injection",
    "validation",
    "parser-agnostic"
  ],
  "author": "Pepijn Senders",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pepijnsenders/markdown-di.git",
    "directory": "packages/core"
  },
  "dependencies": {
    "gray-matter": "^4.0.3",
    "fast-glob": "^3.3.2",
    "yaml": "^2.3.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.3.3"
  }
}
