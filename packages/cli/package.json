{
  "name": "@markdown-di/cli",
  "version": "0.1.0",
  "description": "CLI tool for markdown-di - build and validate markdown projects",
  "bin": {
    "markdown-di": "./dist/cli.js",
    "mdi": "./dist/cli.js"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bun build ./src/cli.ts --outdir ./dist --target node --format esm && tsc --emitDeclarationOnly",
    "test": "bun test",
    "prepublishOnly": "bun run build"
  },
  "keywords": [
    "markdown",
    "cli",
    "build-tool",
    "dependency-injection"
  ],
  "author": "Pepijn Senders",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pepijnsenders/markdown-di.git",
    "directory": "packages/cli"
  },
  "dependencies": {
    "@markdown-di/core": "workspace:*",
    "commander": "^12.0.0",
    "chokidar": "^3.6.0",
    "chalk": "^5.3.0",
    "ora": "^8.0.1",
    "fast-glob": "^3.3.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.3.3"
  }
}
